<ol reversed class="notelist" style="counter-reset: start-from {{ (noteslistCounter or noteslist.length) + 1 }}">
{% for note in noteslist | reverse %}
  <li class="notelist-item{% if note.url == url %} notelist-item-active{% endif %}">
    <a href="{{ note.url | url }}" class="notelist-link">{% if note.data.title %}{{ note.data.title }}{% else %}<code>{{ note.url }}</code>{% endif %}</a>
    <time class="notelist-date" datetime="{{ note.date | htmlDateString }}">{{ note.date | readableDate }}</time>
    {% for tag in note.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="note-tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
  </li>
{% endfor %}
</ol>
